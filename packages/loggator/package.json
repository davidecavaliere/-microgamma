{
  "name": "@microgamma/loggator",
  "version": "1.15.2",
  "description": "visionmedia's debug wrapped like a candy",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "license": "MIT",
  "keywords": [
    "log",
    "debug",
    "typescript",
    "decorator"
  ],
  "author": {
    "email": "cavaliere.davide@gmail.com",
    "name": "Davide Cavaliere",
    "url": "www.dcsoftware.io"
  },
  "homepage": "https://github.com/davidecavaliere/-microgamma/tree/master/packages/loggator",
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:lint": "tslint --project . ",
    "clean": "trash lib"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@types/debug": "^0.0.30",
    "debug": "^4.1.1",
    "reflect-metadata": "^0.1.12"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@(microgamma/)(.*)$": "<rootDir>/../$2/src"
    },
    "reporters": [
      "default"
    ],
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/index.ts",
      "!**/*.dev.ts",
      "!src/integration/*"
    ],
    "coverageDirectory": "../../coverage/"
  }
}
