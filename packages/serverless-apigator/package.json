{
  "name": "@microgamma/serverless-apigator",
  "version": "1.10.14",
  "description": "a typescript-starter project",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "info": "npm-scripts-info",
    "clean": "trash lib",
    "build": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "test:unit": "jest --coverage",
    "test:watch": "jest --watch",
    "test:lint": "tslint --project . ",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:json": "nyc report --reporter=json > coverage/coverage.json",
    "cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "cov:send:ci": "nyc report --reporter=json > coverage.json && codecov -t ${CODECOV_TOKEN}",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@microgamma/apigator": "file:../apigator",
    "@microgamma/loggator": "file:../loggator",
    "@types/aws-sdk": "^2.7.0",
    "fs-extra": "^7.0.1",
    "reflect-metadata": "^0.1.12"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "serverless": "^1.30.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@(microgamma/)(.*)$": "<rootDir>/../$2/src"
    },
    "reporters": [
      "default"
    ],
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/index.ts"
    ]
  }

}
