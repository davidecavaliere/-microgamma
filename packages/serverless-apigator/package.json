{
  "name": "@microgamma/serverless-apigator",
  "version": "1.15.1",
  "description": "serverless plugin to write configuration using typescript's decorators",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "license": "MIT",
  "keywords": [
    "serverless",
    "serverless framework",
    "typescript",
    "decorator",
    "inversion of control",
    "ioc"
  ],
  "author": {
    "email": "cavaliere.davide@gmail.com",
    "name": "Davide Cavaliere",
    "url": "www.dcsoftware.io"
  },
  "homepage": "https://github.com/davidecavaliere/-microgamma/tree/master/packages/apigator",
  "scripts": {
    "info": "npm-scripts-info",
    "clean": "trash lib",
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "test:_integration": "jest --testRegex integration.test",
    "test:integration:watch": "yarn test:integration --watch",
    "test:watch": "jest --watch",
    "test:lint": "tslint --project . "
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@microgamma/loggator": "^1.12.3",
    "@types/serverless": "^1.18.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@microgamma/apigator": ">=1.14.0",
    "serverless": "^1.30.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@(microgamma/)(.*)$": "<rootDir>/../$2/src"
    },
    "reporters": [
      "default"
    ],
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/index.ts",
      "!**/*.dev.ts",
      "!src/integration/*"
    ],
    "coverageDirectory": "../../coverage/"
  }
}
