{
  "name": "@microgamma/dynamodb",
  "version": "1.12.3",
  "description": "DynamoDB persistence engine",
  "author": {
    "email": "cavaliere.davide@gmail.com",
    "name": "Davide Cavaliere",
    "url": "www.dcsoftware.io"
  },
  "homepage": "https://github.com/davidecavaliere/-microgamma",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "keywords": [
    "typescript",
    "dynamodb",
    "decorator"
  ],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "test": "run-s test:unit test:integration",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:integration": "jest --testRegex integration.test --preset @shelf/jest-dynamodb",
    "test:integration:watch": "yarn test:integration --watch",
    "test:lint": "tslint --project . ",
    "clean": "trash lib"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@microgamma/datagator": "^1.12.3",
    "@microgamma/loggator": "^1.12.3",
    "@types/mongodb": "^3.1.18",
    "mongodb": "^3.1.10",
    "reflect-metadata": "^0.1.12",
    "utility-types": "^3.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@(microgamma/)(.*)$": "<rootDir>/../$2/src"
    },
    "reporters": [
      "default"
    ],
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/index.ts",
      "!**/*.dev.ts",
      "!src/integration/*"
    ],
    "coverageDirectory": "../../coverage/"
  },
  "devDependencies": {
    "@shelf/jest-dynamodb": "^1.5.0"
  }
}
