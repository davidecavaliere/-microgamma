{
  "name": "@microgamma/apigator",
  "version": "1.10.19",
  "description": "syntactic sugar for Î»",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "author": {
    "email": "cavaliere.davide@gmail.com",
    "name": "Davide Cavaliere",
    "url": "www.dcsoftware.io"
  },
  "homepage": "https://github.com/davidecavaliere/-microgamma/tree/master/packages/apigator",
  "license": "MIT",
  "keywords": [
    "typescript",
    "decorator",
    "lambda",
    "api",
    "endpoint"
  ],
  "scripts": {
    "prebuild": "run-s clean",
    "build": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:lint": "tslint --project . ",
    "cov:send": "jest --coverage && codecov -F apigator",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "clean": "trash lib",
    "prepare-release": "run-s all version doc:publish"
  },
  "dependencies": {
    "@microgamma/digator": "file:../digator",
    "@microgamma/loggator": "file:../loggator",
    "@types/aws-lambda": "^8.10.11",
    "reflect-metadata": "^0.1.12"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@(microgamma/)(.*)$": "<rootDir>/../$2/src"
    },
    "reporters": [
      "default"
    ],
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "./coverage/"
  }
}
